<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Base activity theme-->
    <style name="ActivityBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:typeface">monospace</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <!--Splash-->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/colorSplashLayoutBackground</item>
        <item name="colorPrimaryDark">@color/colorSplashLayoutBackground</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <!--Registration-->
    <style name="RegistrationTheme" parent="ActivityBaseTheme">
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="colorPrimary">@color/colorPrimaryRegistration</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkRegistration</item>
        <item name="android:windowBackground">@color/colorLoginLayoutBackground</item>
        <item name="android:editTextStyle">@style/RegisterEditTextStyle</item>
        <item name="android:buttonStyle">@style/RegisterButtonStyle</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="DatePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RegisterEditTextStyle" parent="android:style/Widget.EditText">
        <item name="android:textSize">@dimen/textSizeRegistrationText</item>
        <item name="android:textColor">@color/colorRegistrationEditTextText</item>
        <item name="android:textColorHint">@color/colorRegistrationEditTextHint</item>
        <item name="android:drawablePadding">@dimen/paddingDrawableRegistrationEditText</item>
        <item name="android:padding">@dimen/paddingRegistrationEditText</item>
        <item name="android:background">@drawable/shape_edittext_login</item>
        <item name="android:elevation" tools:targetApi="lollipop">@dimen/elevationRegistrationEditText</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="RegisterSemiCircleButtonStyle" parent="android:style/Widget.TextView">
        <item name="android:textSize">@dimen/textSizeRegistrationText</item>
        <item name="android:textColor">@color/colorRegistrationButtonTextInverse</item>
        <item name="android:paddingTop">@dimen/paddingTopRegistrationSemiCircleButton</item>
        <item name="android:paddingBottom">@dimen/paddingBottomRegistrationSemiCircleButton</item>
        <item name="android:paddingStart">@dimen/paddingStartRegistrationSemiCircleButton</item>
        <item name="android:paddingEnd">@dimen/paddingEndRegistrationSemiCircleButton</item>
        <item name="android:background">@drawable/shape_registration_semi_circle</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="RegisterButtonStyle" parent="android:style/Widget.Button">
        <item name="android:textSize">@dimen/textSizeRegistrationText</item>
        <item name="android:textColor">@drawable/selector_register_button_text</item>
        <item name="android:paddingTop">@dimen/paddingTopRegistrationButton</item>
        <item name="android:paddingBottom">@dimen/paddingBottomRegistrationButton</item>
        <item name="android:paddingStart">@dimen/paddingStartRegistrationButton</item>
        <item name="android:paddingEnd">@dimen/paddingEndRegistrationButton</item>
        <item name="android:elevation" tools:targetApi="lollipop">@dimen/elevationRegistrationButton</item>
        <item name="android:background">@drawable/selector_button_background_register</item>
    </style>

    <style name="RegisterTextViewTitleStyle" parent="android:style/Widget.TextView">
        <item name="android:textColor">@color/colorRegistrationTextViewTitle</item>
        <item name="android:textSize">@dimen/textSizeRegistrationTitle</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RegisterTextViewTitleInverseStyle" parent="android:style/Widget.TextView">
        <item name="android:textColor">@color/colorRegistrationTextViewTitleInverse</item>
        <item name="android:textSize">@dimen/textSizeRegistrationTitle</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--Login-->
    <style name="LoginTheme" parent="ActivityBaseTheme">
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="colorPrimary">@color/colorPrimaryRegistration</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkRegistration</item>
        <item name="android:windowBackground">@color/colorLoginLayoutBackground</item>
        <item name="android:editTextStyle">@style/LoginEditTextStyle</item>
    </style>

    <style name="LoginEditTextStyle" parent="android:style/Widget.EditText">
        <item name="android:textSize">@dimen/textSizeLoginEditText</item>
        <item name="android:textColor">@color/colorLoginEditTextText</item>
        <item name="android:textColorHint">@color/colorLoginEditTextHint</item>
        <item name="android:drawablePadding">@dimen/paddingDrawableLoginEditText</item>
        <item name="android:padding">@dimen/paddingLoginEditText</item>
        <item name="android:elevation" tools:targetApi="lollipop">@dimen/elevationLoginEditText</item>
        <item name="android:background">@drawable/shape_edittext_login</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="LoginButtonStyle" parent="android:style/Widget.Button">
        <item name="android:textSize">@dimen/textSizeLoginText</item>
        <item name="android:textColor">@drawable/selector_register_button_text</item>
        <item name="android:paddingTop">@dimen/paddingTopLoginButton</item>
        <item name="android:paddingBottom">@dimen/paddingBottomLoginButton</item>
        <item name="android:paddingStart">@dimen/paddingStartLoginButton</item>
        <item name="android:paddingEnd">@dimen/paddingEndLoginButton</item>
        <item name="android:background">@drawable/selector_button_background_register</item>
    </style>

    <style name="LoginSemiCircleButtonStyle" parent="android:style/Widget.Button">
        <item name="android:textSize">@dimen/textSizeRegistrationText</item>
        <item name="android:textColor">@color/colorLoginButtonText</item>
        <item name="android:paddingTop">@dimen/paddingTopRegistrationSemiCircleButton</item>
        <item name="android:paddingBottom">@dimen/paddingBottomRegistrationSemiCircleButton</item>
        <item name="android:paddingStart">@dimen/paddingStartRegistrationSemiCircleButton</item>
        <item name="android:paddingEnd">@dimen/paddingEndRegistrationSemiCircleButton</item>
        <item name="android:background">@drawable/shape_login_semi_circle</item>
    </style>

    <style name="LoginTextViewTitleStyle" parent="android:style/Widget.TextView">
        <item name="android:textColor">@color/colorLoginTextViewTitle</item>
        <item name="android:textSize">@dimen/textSizeHeading1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">start</item>
        <item name="android:padding">@dimen/padding</item>
    </style>

    <style name="LoginTextViewTextStyle" parent="android:style/Widget.TextView">
        <item name="android:textColor">@color/colorLoginTextViewTitle</item>
        <item name="android:textSize">@dimen/textSizeLoginText</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="LoginTextViewTitleInverseStyle" parent="android:style/Widget.TextView">
        <item name="android:textColor">@color/colorLoginTextViewTitleInverse</item>
        <item name="android:textSize">@dimen/textSizeLoginTitle</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--Host-->
    <style name="HostTheme" parent="ActivityBaseTheme">
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="colorPrimary">@color/colorPrimaryHost</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkHost</item>
        <item name="android:windowBackground">@color/colorHostLayoutBackground</item>
    </style>

    <style name="HostToolbarStyle">
        <item name="android:background">@color/colorPrimaryHost</item>
        <item name="android:elevation">@dimen/elevationHostToolbar</item>
        <item name="android:textColorPrimary">@color/colorLoginTextViewTitleInverse</item>
        <item name="actionMenuTextColor">@color/colorLoginTextViewTitleInverse</item>
        <item name="android:textColorSecondary">@color/colorLoginTextViewTitleInverse</item>
    </style>

    <style name="HostToolbarPopupMenuStyle">
        <item name="android:elevation">@dimen/elevationHostToolbar</item>
        <item name="android:textColorPrimary">@color/colorLoginTextViewTitleInverse</item>
        <item name="actionMenuTextColor">@color/colorLoginTextViewTitleInverse</item>
        <item name="android:textColorSecondary">@color/colorLoginTextViewTitleInverse</item>
    </style>

    <style name="HostTextViewTitleStyle" parent="android:style/Widget.TextView">
        <item name="android:textColor">@color/colorLoginTextViewTitleInverse</item>
        <item name="android:textSize">@dimen/textSizeHeading1</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="HostTextViewTextStyle" parent="android:style/Widget.TextView">
        <item name="android:textColor">@color/colorHostTextViewText</item>
        <item name="android:textSize">@dimen/textSizeHostText</item>
        <item name="android:gravity">start</item>
        <item name="android:paddingStart">@dimen/padding_extra</item>
        <item name="android:paddingEnd">@dimen/padding_extra</item>
        <item name="android:paddingTop">@dimen/padding</item>
        <item name="android:paddingBottom">@dimen/padding</item>
    </style>

    <style name="HostTextViewSubTextStyle" parent="android:style/Widget.TextView">
        <item name="android:textColor">@color/colorHostTextViewSubText</item>
        <item name="android:textSize">@dimen/textSizeHostSubText</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <style name="HostDrawerItemTextStyle" parent="android:style/Widget.TextView">
        <item name="android:textColor">@drawable/selector_drawer_item_text</item>
        <item name="android:textSize">@dimen/textSizeHostText</item>
        <item name="android:gravity">start</item>
        <item name="android:paddingStart">@dimen/padding_extra</item>
        <item name="android:paddingEnd">@dimen/padding_extra</item>
        <item name="android:paddingTop">@dimen/padding</item>
        <item name="android:paddingBottom">@dimen/padding</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <!--Home-->
    <style name="HomeTextViewTitleStyle" parent="android:style/Widget.TextView">
        <item name="android:textColor">@color/colorHomeTextViewTitleDark</item>
        <item name="android:textSize">@dimen/textSizeHomeTitle</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">start</item>
        <item name="android:lineSpacingExtra">@dimen/margin_nano</item>
    </style>

    <style name="HomeTextViewTextStyle" parent="android:style/Widget.TextView">
        <item name="android:textColor">@color/colorHomeTextViewLight</item>
        <item name="android:textSize">@dimen/textSizeHomeText</item>
        <item name="android:gravity">start</item>
        <item name="android:lineSpacingExtra">@dimen/margin_nano</item>
    </style>

    <style name="HomeTextViewSubTextStyle" parent="android:style/Widget.TextView">
        <item name="android:textColor">@color/colorHomeTextViewSubText</item>
        <item name="android:textSize">@dimen/textSizeHomeSubText</item>
        <item name="android:gravity">start</item>
        <item name="android:lineSpacingExtra">@dimen/margin_nano</item>
        <item name="android:paddingStart">@dimen/padding_extra</item>
        <item name="android:paddingEnd">@dimen/padding_extra</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">@dimen/padding_extra</item>
    </style>

    <!--Category-->
    <style name="CategoryTextViewTitleStyle" parent="android:style/Widget.TextView">
        <item name="android:textColor">@color/colorCategoryTextViewTitleDark</item>
        <item name="android:textSize">@dimen/textSizeCategoryText</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textSize">@dimen/textSizeCategoryText</item>
        <item name="android:textColor">@drawable/selector_button_text</item>
        <item name="android:paddingTop">@dimen/padding_nano</item>
        <item name="android:paddingBottom">@dimen/padding_nano</item>
        <item name="android:paddingStart">@dimen/padding_extra</item>
        <item name="android:paddingEnd">@dimen/padding_extra</item>
        <item name="android:background">@drawable/selector_button_background</item>
    </style>
</resources>
